<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}:%L] %m%n"/>-->
            <!--for more details-->
            <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5p %C.%M(%F:%L) - %m%n"/>-->
            <!--for better performance-->
            <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %C{1}.%M - %m%n"/>-->
            <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}] %c{1}:%L - %m%n"/>-->
            <!--<param name="ConversionPattern" value="%c{1}:%L - %m%n"/>-->
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/tmp/ollehtv-dist-esp-engine.log"/>
        <param name="Threshold" value="DEBUG"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}:%L] %m%n"/>-->
            <!--for more details-->
            <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5p %C.%M(%F:%L) - %m%n"/>-->
            <!--for better performance-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %C{1}.%M - %m%n"/>
        </layout>
    </appender>

    <logger name="org.jboss.logging">
        <level value="ERROR"/>
    </logger>

    <logger name="org.hibernate">
        <level value="ERROR"/>
    </logger>

    <logger name="org.infinispan">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.commons.configuration">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.http">
        <level value="ERROR"/>
    </logger>

    <logger name="kafka">
        <level value="ERROR"/>
    </logger>

    <logger name="com.netflix">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.zookeeper">
        <level value="ERROR"/>
    </logger>

    <logger name="backtype.storm">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.avro">
        <level value="DEBUG"/>
    </logger>

    <logger name="com.tigerby.storm.ollehtv">
        <level value="ERROR"/>
    </logger>

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</log4j:configuration>